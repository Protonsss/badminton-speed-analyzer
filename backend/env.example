# Application Settings
APP_NAME="Badminton Smash Speed Analyzer"
DEBUG=False
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=False

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload Settings
MAX_UPLOAD_SIZE=524288000  # 500 MB in bytes
UPLOAD_DIR=/tmp/badminton_analyzer/uploads
RESULTS_DIR=/tmp/badminton_analyzer/results
FILE_RETENTION=7200  # 2 hours in seconds

# Model Settings
YOLO_MODEL_PATH=  # Leave empty for default yolov8n.pt
YOLO_CONF_THRESHOLD=0.3
YOLO_IOU_THRESHOLD=0.4
YOLO_DEVICE=cuda  # cuda or cpu

# Processing Settings
DEFAULT_FPS=60.0
RELOCK_INTERVAL=8
MIN_TRACK_LENGTH=5
SMOOTH_WINDOW=5

# Kalman Filter Settings
KALMAN_MEASUREMENT_NOISE=5.0
KALMAN_PROCESS_NOISE=0.1

# Motion Detector Settings
MOTION_MIN_SIZE=6
MOTION_MAX_SIZE=40
MOTION_THRESHOLD=35

# Monitoring (optional)
SENTRY_DSN=

